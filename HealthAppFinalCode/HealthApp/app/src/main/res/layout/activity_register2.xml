<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/container"
    android:fitsSystemWindows="true"
    android:background="@color/white"
    tools:context="health.app.Activities.RegisterTwoActivity">

    <LinearLayout
        android:background="#FFFFFF"
        android:id="@+id/toolbar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <include layout="@layout/toolbar" />
    </LinearLayout>
    <View
        android:id="@+id/view"
        android:layout_below="@+id/toolbar_layout"
        android:background="#858585"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_waist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text|number"
                    android:id="@+id/input_waist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Waist like:-20cm (Optional)"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_hip"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text|number"
                    android:id="@+id/input_hip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Hip like:-20cm (Optional)"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_calf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text|number"
                    android:id="@+id/input_calf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Calf like:-20cm (Optional)"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_thigh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text|number"
                    android:id="@+id/input_thigh"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Thigh like:-20cm (Optional)"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_chest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text|number"
                    android:id="@+id/input_chest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Chest like:-20cm (Optional)"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_arm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text|number"
                    android:id="@+id/input_arm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Arm like:-20cm (Optional)"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_bodyfat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text|number"
                    android:id="@+id/input_fat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/BodyFatPercentOpn"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="textEmailAddress"
                    android:id="@+id/input_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/email_txt"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:visibility="gone"
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_birthday"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="date"
                    android:clickable="true"
                    android:cursorVisible="false"
                    android:editable="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:id="@+id/input_birthday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableRight="@mipmap/birthdaycalendar2x"
                    android:hint="Birthday"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:visibility="gone"
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_daily_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text"
                    android:maxLines="5"
                    android:id="@+id/input_daily_activity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Daily Activity"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:visibility="gone"
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_short_bio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:inputType="text"
                    android:id="@+id/input_short_bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Short Bio"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/Password"
                    android:inputType="textPassword"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:theme="@style/MyTextInputLayout"
                android:id="@+id/input_layout_con_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/input_con_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/ConfirmPassword"
                    android:inputType="textPassword"
                    android:textSize="15sp" />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:id="@+id/bt_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/bt_backgound"
                android:text="@string/submit"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textStyle="bold" />


        </LinearLayout>
    </ScrollView>



</LinearLayout>
